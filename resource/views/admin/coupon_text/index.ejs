<div class="d-flex justify-content-between align-items-center mb-3 border-bottom-1">
        <h2>محتواهای بن تخفیف</h2>
        <div class="btn-group">
            <a href="/admin/coupon_text/create" class="btn btn-sm btn-primary">ایجاد محتوای بن تخفیف</a>
        </div>
    </div>
    <div class="table-responsive">
        <table class="table table-striped table-bordered">
            <thead>
            <tr>
                <th> نام محتوا</th>
                <th>تاریخ</th>
                <th>تنظیمات</th>
               
            </tr>
            </thead>
            <tbody>
                <% coupon_text.forEach(coupon_text =>{ %>
                    <tr>
                        <td><%= coupon_text.title %></td>
                        <td><%= date(coupon_text.createdAt).format('jD jMMMM jYYYY') %></td>
                        <td>
                            <form action="/admin/coupon_text/<%= coupon_text._id %>?_method=DELETE" method="post">
                                <input type="hidden" name="_method" value="delete">
                                <input type="hidden" name="_token" value="Dso45XzqoXsAkRC8BBMQ63ZsOFS0c2tELkxR4i3Y">
                                <div class=" btn-group-sm">
                                    <a href="/admin/coupon_text/<%= coupon_text._id %>/edit"  class="btn btn-primary">ویرایش</a>
                                    <button type="submit" class="btn btn-danger">حذف</button>
                                </div>
                            </form>
                        </td>
                    </tr>
                    <% }); %>
            </tbody>
        </table>
    </div>
    
    