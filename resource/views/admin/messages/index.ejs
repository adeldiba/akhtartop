<div class="d-flex justify-content-between align-items-center mb-3 border-bottom-1">
        <h2>پیغام به کاربران وبسایت</h2>
        <div class="btn-group">
            <a href="/admin/messages/create" class="btn btn-sm btn-primary">ایجاد پیغام به کاربران وبسایت</a>
        </div>
    </div>
    <div class="table-responsive">
        <table class="table table-striped table-bordered">
            <thead>
            <tr>
                <th> نام پیغام</th>
                <th>تاریخ</th>
                <th>تنظیمات</th>
               
            </tr>
            </thead>
            <tbody>
                <% messages.forEach(message =>{ %>
                    <tr>
                        <td><%= message.title %></td>
                        <td><%= date(message.createdAt).format('jD jMMMM jYYYY') %></td>
                        <td>
                            <form action="/admin/messages/<%= message._id %>?_method=DELETE" method="post">
                                <input type="hidden" name="_method" value="delete">
                                <input type="hidden" name="_token" value="Dso45XzqoXsAkRC8BBMQ63ZsOFS0c2tELkxR4i3Y">
                                <div class=" btn-group-sm">
                                    <a href="/admin/messages/<%= message._id %>/edit"  class="btn btn-primary">ویرایش</a>
                                    <button type="submit" class="btn btn-danger">حذف</button>
                                </div>
                            </form>
                        </td>
                    </tr>
                    <% }); %>
            </tbody>
        </table>
    </div>
    
    