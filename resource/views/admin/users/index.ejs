<div class="d-flex justify-content-between align-items-center mb-3 border-bottom-1">
        <h2>کاربران وبسایت</h2>
    </div>
    <div class="table-responsive">
        <table class="table table-striped table-bordered">
            <thead>
            <tr>
                <th>نام کاربر</th>
                <th>ایمیل کاربر</th>
                <th>تاریخ عضویت</th>
                <th>تنظیمات</th>
            </tr>
            </thead>
            <tbody>
                <% users.docs.forEach(user => { %>
                    <tr>
                        <td><a href="#"><%= user.name %></a></td>
                        <td><a href="#"><%= user.email %></a></td>
                        <td><%= date(user.createdAt).format('jD jMMMM jYYYY') %></td>
                        <td>
                            <form action="/admin/users/<%= user.id %>?_method=DELETE" method="post">
                                <div class=" btn-group-sm">
                                    
                                    <a href="/admin/users/<%= user.id %>/toggleadmin"  class="btn <%= user.admin ? 'btn-success' : 'btn-primary' %>"><%= user.admin ? 'لغو مدیریت' : 'مدیریت' %></a>
                                    
                                    <button type="submit" class="btn btn-danger">حذف</button>
                                </div>
                            </form>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>

        <%- include(viewPath('layouts/pagination') ,{ pagination : users}) %>
    </div>
    
    