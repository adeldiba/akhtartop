<div class="d-flex justify-content-between align-items-center mb-3 pb-2 border-bottom">
    <h2>ویرایش آپلود ویدیو</h2>
</div>
<form class="form-horizontal" action="/admin/videos/<%= video._id %>?_method=put" method="post">

    <%- include(viewPath('layouts/error-messages')) -%>

    <div class="form-group row">
        <div class="col">
            <label for="title" class="control-label font-weight-bold">عنوان ویدیو</label>
            <input type="text" class="form-control" name="title" value="<%= video.title %>" id="title">
        </div>
    </div>

    <div class="form-group row">
        <div class="form-group row">
            <div class="col">
                <div class="button_outer">
                    <div class="btn_upload">
                        <input type="file" id="img" name="images">
                        آپلود ویدیو
                    </div>
                    <div class="processing_bar"></div>
                    <div class="success_box"></div>
                </div>
                <img class="z-depth-2" src="#" id="imgPreview" alt="">   
            </div>
        </div>
        <div class="form-group row">
            <% Object.entries(video.images).forEach(([size , image]) => { %>
                <div class="col-sm-2">
                    <label class="control-label">
                        <%= size %>
                        <input type="radio" name="imagesThumb" value="<%= image %>" checked="">
                        <a href="<%= image %>" target="_blank"><img src="<%= image %>" width="100%"></a>
                    </label>
                </div>
            <% }) %>
        </div>
    </div>

    <div class="form-group row">
            <div class="col">
                <button type="submit" class="btn btn-danger">ارسال</button>
            </div>
        </div>
</form>

<link rel="stylesheet" href="/css/component-chosen.min.css">
<script src="/ckeditor/ckeditor.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/chosen/1.8.6/chosen.jquery.min.js"></script>
