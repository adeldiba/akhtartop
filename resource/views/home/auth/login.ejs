
    <section class="login-area mt-5">
        <div class="container">
            <div class="box-area">
                <div class="row">
                    <div class="col-12 col-md-12 col-lg-12 text-right">
                        <h3><i class="fas fa-caret-square-left"></i> ورود کاربر</h3>
                    </div>
                </div><!--row-->
                <div class="border-area"></div>
                <form method="POST" action="/auth/login" class="mt-5 text-right">
                    <%- include(viewPath('layouts/error-messages')) -%>
                    <div class="md-form">
                        <input type="email" name="email" id="email" value="<%= old('email') %>" class="form-control">
                        <label for="email">ایمیل</label>
                      </div>
                      <div class="md-form">
                        <input type="password" name="password" id="password" class="form-control">
                        <label for="password">پسورد</label>
                      </div>
                      
                      <div class="row login-text">
                          <div class="col-6 col-md-6">
                              <a href="/auth/password/reset">گذرواژه خود را فراموش کرده اید؟</a>
                          </div>
                          <div class="col-6 col-md-6 text-left">
                            <label class="customcheck">مرا به خاطر بسپار
                                <input type="checkbox"  name="remember">
                                <span class="checkmark"></span>
                              </label>
                        </div>
                      </div>
                      <div class="form-group">
                        <%- recaptcha %>
                        </div>
                      <div class="row mt-5">
                        <div class="col-6 col-md-6 text-right">
                            <label class="customcheck mt-2">من مشتری ثابت آختارتاپ هستم
                                <input type="checkbox" checked="checked">
                                <span class="checkmark"></span>
                            </label>
                        </div> 

                        <div class="col-6 col-md-6 text-left">
                            <div class="btn-add ">
                           <button type="submit"><i class="fas fa-play"></i> ورود</button> 
                        </div>
                    </div>
                </div><!--row-->
                </form>
                <div class="border-area"></div>
                <div class="lo-reg pb-5">
                    <div class="row">
                        <div class="col-6 col-md-6 text-right">
                            <a href="/auth/register">تا حالا در سایت ثبت نام نکرده اید؟</a>
                        </div>
                        <div class="col-6 col-md-6 text-left">
                            <a href="#" class="color-r">در ورود به سایت مشکل دارید؟</a>
                        </div>
                    </div>
                </div><!--lo-reg-->
            </div>
        </div>
    </section>
