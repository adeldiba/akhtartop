<section class="profile-area mt-4">
    <div class="container">
        <div class="row">
            <div class="col-12 col-md-3 col-lg-3 text-right">
                <%- include(viewPath('home/panel/aside')); %>
            </div>
            <div class="col-12 col-md-9 col-lg-9 text-right">
                <div class="profile-left pt-3">
                    <div class="profile-title">
                        <h4>پیغام از طرف وبسایت</h4>
                    </div>
                    <% if(messages.length){ %>
                        <% messages.forEach(message => { %>
                        <div class="messages_admin">
                            <div class="row">
                                <div class="col-12 col-md-12 col-lg-12">
                                    <h4><%= message.title %></h4>
                                    <p><%- message.body %></p>
                                    <span>تاریخ دریافت پیغام :</span> <span class="message_date"><%= date(message.createdAt).fromNow() %></span>
                                </div>
                            </div><!--row-->
                        </div>
                    <% }); %>
                <% }else{ %> 
                  <div class="row">
                      <div class="not-profile mt-5 mx-auto">
                          <p>فعلا پیغامی از طرف وبسایت به شما ارسال نشده است.</p>
                      </div>
                  </div>  
                <% } %>

                </div><!--profile-left-->
            </div>
        </div><!--row-->
    </div>
</section>