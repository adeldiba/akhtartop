<section class="profile-area mt-4">
    <div class="container">
        <div class="row">
            <div class="col-12 col-md-3 col-lg-3 text-right">
                <%- include(viewPath('home/panel/aside')); %>
            </div>
            <div class="col-12 col-md-9 col-lg-9 text-right">
                <div class="profile-left pt-3">
                    <div class="profile-title">
                        <h4>آدرس های من</h4>
                    </div>
                    <% if(panels.length){ %>
                    <% panels.forEach(panel =>{ %>
                    <div class="profile-item mt-5">
                        <div class="row">
                            <div class="col-4 col-md-6 col-lg-6">
                                <div class="profile-add">
                                    <p> نام : <span class="pro-u"><%= panel.name %></span></p>
                                    <p> نام خانوادگی : <span class="pro-u"><%= panel.name_family %></span></p>
                                    
                                </div>
                            </div>
                            <div class="col-6 col-md-6 col-lg-6">
                                <div class="profile-add">
                                    <p> تاریخ تولد : <span class="pro-u"><%= panel.birth_day %> / <%= panel.birth_month %> / <%= panel.birth_year %></span></p>
                                    <p> جنسیت : <span class="pro-u"><%= panel.name %></span></p>
                                    
                                </div>
                            </div>
                            </div><!--row-->
                            <div class="row">
                            <div class="col-6 col-md-6 col-lg-6">
                                <div class="profile-add">
                                    <p> شماره شناسنامه : <span class="pro-u"><%= panel.certificate %></span></p>
                                    <p> کد ملی : <span class="pro-u"><%= panel.codeM %></span></p>
                                    
                                </div>
                            </div>
                            <div class="col-6 col-md-6 col-lg-6">
                                <div class="profile-add">
                                    
                                    <p> استان : <span class="pro-u"><%= panel.state %></span></p>
                                    <p> شهر : <span class="pro-u"><%= panel.city %></span></p>
                                   
                                </div>
                            </div>
                            </div><!--row-->
                            <div class="row">
                            <div class="col-6 col-md-6 col-lg-6">
                                <div class="profile-add">
                                    <p> کد پستی : <span class="pro-u"><%= panel.postal_code %></span></p>
                                    <p> آدرس : <span class="pro-u"><%= panel.address %></span></p>
                                </div>
                            </div>
                            <div class="col-6 col-md-6 col-lg-6">
                                <div class="profile-add">
                                    
                                    <p> موقعیت مکانی : <span class="pro-u"><%= panel.location %></span></p>
                                    <p> شماره کارت : <span class="pro-u"><%= panel.cart %></span></p>
                                </div>
                            </div>
                            
                        </div><!--row-->


                        <form action="/user/panel/<%= panel._id %>?_method=DELETE" method="post">
                                
                            <input type="hidden" name="_method" value="delete">
                            <input type="hidden" name="_token" value="Dso45XzqoXsAkRC8BBMQ63ZsOFS0c2tELkxR4i3Y">
                            
                            <div class="form-a text-center mt-4">
                                <a href="/user/panel/<%= panel._id %>/edit"  class="style-btn-1 color-1">ویرایش</a>
                            </div>
                            <div class="form-b text-center">
                                <div class="row">
                                    <button type="submit" class="style-btn-1 color-3">حذف</button>
                                </div>
                            </div>
                        </form>
                    </div>
                    <hr class="mt-2 mb-2">
                <% }); %>
                <% }else{ %> 
                  <div class="row">
                      <div class="not-profile mt-5 mx-auto">
                          <p>آدرسی ثبت نشده است لطفا برای تکمیل خرید آدرس پروفایل خود را کامل کنید.</p>
                      </div>
                  </div>  
                <% } %>

                </div><!--profile-left-->
            </div>
        </div><!--row-->
    </div>
</section>