<div class="d-flex justify-content-center">
    <% if (pagination.pages > 1) { %>  
        <nav class="pagination-container">  
            <div class="pagination">
          <% if (pagination.page > 1) { %>
              <a class="pagination-newer ml-2" href="?page=1">قبلی</a>
          <% } %>
          <span class="pagination-inner">
          <% var i = 1;
          if (pagination.page > 5) {
            i = +pagination.page - 4;
          } %>
          <% if (i !== 1) { %>
              <li class="page-item disabled"><a class="page-link" href="#">...</a></li>
          <% } %>
          <% for (i; i<=pagination.pages; i++) { %>
            <% if (pagination.page == i) { %>
                <a class="pagination-active" href="#"><span><%= i %></span></a>
            <% } else { %>
                <a href="?page=<%= i %>"><%= i %></a>
            <% } %>
            <% if (i == (+pagination.page + 4)) { %>
                <li class="page-item disabled"><a class="page-link" href="#">...</a></li>
            <% break; } %>
          <% } %>
        </span>
          <% if (pagination.page != pagination.pages) { %>
              <a class="pagination-older" href="?page=<%= pagination.pages %>">بعدی</a>
          <% } %>
        
        </div>
        </nav>  
    <% } %>  
</div>
